<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ThirdFragment">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:text="Turn - "
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        tools:text="user 1" />

    <LinearLayout
        android:id="@+id/allLinearlayout"
        android:layout_width="315dp"
        android:layout_height="325dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="315dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout

                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn1"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn4"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn7"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="315dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn2"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn5"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn8"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="315dp"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn3"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn6"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="#D7D7D7"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn9"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="continue"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/allLinearlayout"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/allLinearlayout"
        app:layout_constraintTop_toBottomOf="@+id/allLinearlayout" />

    <TextView
        android:id="@+id/winning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/allLinearlayout"
        app:layout_constraintTop_toBottomOf="@+id/allLinearlayout" />

    <TextView
        android:id="@+id/winning2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/allLinearlayout"
        app:layout_constraintTop_toBottomOf="@+id/allLinearlayout" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:text="new game"
        app:layout_constraintEnd_toEndOf="@+id/allLinearlayout"
        app:layout_constraintStart_toStartOf="@+id/allLinearlayout"
        app:layout_constraintTop_toBottomOf="@+id/allLinearlayout" />

    <TextView
        android:id="@+id/text_user_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/winning"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/winning"
        app:layout_constraintTop_toBottomOf="@+id/winning" />

    <TextView
        android:id="@+id/text_user_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/winning2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/winning2"
        app:layout_constraintTop_toBottomOf="@+id/winning2" />

</androidx.constraintlayout.widget.ConstraintLayout>